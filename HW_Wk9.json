{ 
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json" ,
    "width": 800,
    "height": 600,
    "title": "Casualties in 2010",
    "layer": [
        {
        "data": {
            "url":"https://raw.githubusercontent.com/ChantelRaja/fit3179-homework-wk9/main/NZ_Map.json",
            "format":{
                "type": "topojson", 
                "feature": "NZ"}
        },
        "mark": {
            "type": "geoshape", 
            "fill": "lightgrey", 
            "stroke":"lightgrey"}
    },
    {
        "data": {
            "url":"https://raw.githubusercontent.com/ChantelRaja/fit3179-homework-wk9/main/NZ2010Casualties.csv"
        },
        "mark": {
            "type": "circle"
        },

        "encoding":{
            "longitude": {
                "field":"longitude" , 
                "type": "quantitative"},
            "latitude": {
                "field":"latitude" , 
                "type": "quantitative"},
            "size": {
                "field": "casualties",
                "type": "quantitative",
                "scale": {"domain": [2,8]}
            },
            "color": { 
                "field": "casualties", 
                "type": "quantitative", 
                "scale": {"scheme": "blues","domain": [2,8]}
            },
            "tooltip": [
                {"field": "latitude", "type": "quantitative", "format": ".4f"},
                {"field": "longitude", "type": "quantitative","format": ".4f"},
                {"field": "casualties", "type": "quantitative"}
            ]
        }
    }
    ]
}




